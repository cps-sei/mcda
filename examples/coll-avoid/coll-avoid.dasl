void print_global_state(int local_state)
{
  for (int i = 0; i < 150; ++i)
    printf("\n");

  printf("round = %d : id = %d : state = %d\n", ++round, (int) *id, local_state);
  printf("_X = %d _Y = %d\n", X, Y);
  print_line(X);

  for (int i = 0; i < Y; ++i) {
    printf("|");

    for (int j = 0; j < X; ++j) {
      bool taken = false;

      for (int k = 0; k < processes; ++k) {
        if (j == true_x[k] && i == true_y[k]) {
          printf("%d|", k);
          taken = true;
          break;
        }
      }

      if (!taken) {
        if (j == *xf && i == *yf)
          printf("o|");
        else printf(" |");
      }
    }
    printf("\n");
    print_line(X);
  }
